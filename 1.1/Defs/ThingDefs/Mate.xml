  <ThingDef ParentName="VG_DrinksBase">
    <defName>Mate</defName>
    <label>mate</label>
    <description>Mate leaves prepared in a small container for drinking. Improves mood, when doing other tasks, or allows to talk to others. Mate use can't produce a dependency.\n\nMates can be produced at a crafting spot without equipment.</description>
    <graphicData>
      <texPath>Things/Item/Mate</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <techLevel>Neolithic</techLevel>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
	<stackLimit>75</stackLimit>
	<statBases>
	  <MarketValue>8</MarketValue>
	</statBases>
      <ingestible>
         <preferability>NeverForNutrition</preferability>
        <foodType>Processed</foodType>
         <joy>0.07</joy>
      <nurseable>true</nurseable>
      <drugCategory>Social</drugCategory>
     <ingestSound>Ingest_Beer</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
